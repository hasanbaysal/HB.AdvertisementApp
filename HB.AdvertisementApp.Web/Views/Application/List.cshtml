
@{
    ViewData["Title"] = "List";
}
@model List<AdvertisementListDto>
<h1>List</h1>







<div class="min-vh-100">

    @if (Model.Count > 0)
    {
        <div class="row">

            <div class="col-md-10 mx-auto mt-3 p-1">
                <div class="text-end mb-3">

                    <a class="btn btn-outline-primary" asp-controller="Application" asp-action="Create">Yeni Oluştur</a>
                  
                </div>
                <table class="table  table-hover table-striped">
                    <thead>

                        <tr>
                            <th>Başlık  </th>
                            <th>Oluşturma Tarihi Kişi</th>
                            <th>Status</th>
                            <th>İşlem</th>
                            

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Title</td>
                                <td>@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                                <td>@(item.Status ?"aktif":"pasif")</td>
                              
                                <td>
                                    <a asp-route-id="@item.Id" asp-action="Update" asp-controller="Application" class="btn btn-sm btn-outline-warning"> Güncelle </a>
                                    <a asp-action="Remove" asp-controller="Application" class="btn btn-sm btn-outline-warning"> Sil </a>

                                    
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>


            </div>

        </div>


    }
    else
    {
        <div class="text-end my-3 p-1">

            <a class="btn btn-outline-primary" asp-controller="Application" asp-action="Create">Yeni Oluştur</a>
        </div>
        <div class="text-center mt-3 lead">

            herhangi bir başvuru bulunmamaktadır;

        </div>
    }


</div>